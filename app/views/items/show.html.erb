<p>
	<strong>Name:</strong>
	<%= @item.name %>
</p>

<p>
<strong>Notes:</strong>
	<%= @item.notes %>
</p>
<hr/>
<h5>Comments</h5>
<%= render @item.comments %>
<hr/>
<h4>Add a comment:</h4>
<%= form_for([@item, @item.comments.build]) do |f| %>
	<p>
		<%= f.label :commenter %><br />
		<%= f.text_field :commenter %>
	</p>
	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>
	<p>
	<%= f.submit %>
	</p>
<% end %>

<%= link_to 'Back', items_path, class: "btn btn-default"  %>
	<%= link_to 'Edit', edit_item_path(@item) %>

