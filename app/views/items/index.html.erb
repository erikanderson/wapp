<h1>Item index</h1>

<%= link_to 'New item', new_item_path, class: "btn btn-large btn-primary"  %>

<table class='table table-striped'>
	<tr>
		<th>Name</th>
		<th>Notes</th>
	</tr>

	<% @items.each do |item| %>
		<tr>
			<td><%= item.name	%></td>
			<td><%= item.notes %></td>
			<td><%= link_to 'Show', item, class: "btn btn-info" %></td>
			<td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-warning" %></td>	
			<td><%= link_to 'Delete', item_path(item),
											method: :delete, data: { confirm: 'Are you sure you want to delete this item?' }, class: "btn btn-danger" %></td>		
		</tr>
	<%end %>
</table>



